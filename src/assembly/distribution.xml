<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 
          http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>bisen-api-tester-${project.version}</baseDirectory>
    
    <fileSets>
        <!-- Include the JAR file -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>${project.build.finalName}.jar</include>
            </includes>
        </fileSet>
        
        <!-- Include startup scripts -->
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>start-windows.bat</include>
                <include>start-mac.sh</include>
                <include>start-mac.command</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
        
        <!-- Include README -->
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>DISTRIBUTION_README.md</include>
            </includes>
        </fileSet>
        
        <!-- Include documentation -->
        <fileSet>
            <directory>${project.basedir}/docs</directory>
            <outputDirectory>/docs</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>

